body
    font-size 18px 
    font-family arial
    color ghostwhite
    line-height 1.4
    background-color rgb(50, 50, 65) 
h2 
    font-size 22px
    
p
    padding 10px 0px
    max-width 800px
    margin auto

a 
    color #00B7FF
    transition all .4s

pre
    background-color #f5f5f5
    max-width 800px
    margin auto
code
    background-color #f5f5f5
pre code 
    color #c7254e
    font-size 16px
    background-color #f5f5f5
a:link, a:hover, a:active, a:visited
    text-decoration none

a:active
    transition all .2s
    color ghostwhite
a:hover
    color ghostwhite

.navbar-default .navbar-nav>li>a:hover
    // color rgb(20,20,20)
    color ghostwhite

.navbar-default .navbar-brand:hover
    // color rgb(20,20,20)
    color ghostwhite

.space {
    height 30px
}

.cc-label
    font-size 22px
    font-weight bold
  
@keyframes spinning {
    from {transform:rotate(0deg);}
    to {transform:rotate(360deg);}
}
.spinning {
    animation-name: spinning;
    animation-duration: 1.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
}